#!/bin/bash

#===============================================================================
# Script: resolveS_singlePrecise
# Description: Precise strandedness determination for a single sample
#              Uses 8M reads and provides incremental analysis at each 1M reads
# Usage: 
#   ./resolveS_singlePrecise -s <input_file> [-u <millions>]
#===============================================================================
export PS4='+ ${BASH_SOURCE}:${LINENO}: '
#set -x
#
set -e

# Default values
INPUT_FILE=""
OUTPUT_FILE="log.raw.SAM.counts.txt"
THREADS=6
MAX_MILLIONS=8  # Default to 8 million reads
MAX_ALIG_READS=$((MAX_MILLIONS * 1000000))  # 8000000
REFERENCE_DB="../ref_default/default"
REFERENCE_DB_IS_DEFAULT=true  # Track if using default value

# Get the DIR of the SCRIPT
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"

# Color output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

#===============================================================================
# Functions
#===============================================================================

print_usage() {
    cat << 'EOF'
This is resolveS_singlePrecise version 0.0.8
Precise strandedness determination with incremental analysis

Usage: $0 [OPTIONS]

Options:
    -s <file>       Input file: process one input file (required)
    -c <file>       Output the count matrix from the SAM file (default: log.raw.SAM.counts.txt)
    -p <number>     Number of threads to use (default: 6)
    -u <number>     Maximum number of millions of reads to align (default: 8)
    -r <path>       The reference genome db, can be any bowtie2 index (default: ../ref_default/default)
    -h              Show this help message

Examples:
    # Basic usage with default 8M reads
    $0 -s sample_1.fastq
    
    # Use 10 million reads for more precise determination
    $0 -s sample_1.fastq -u 10
    
    # Specify reference genome
    $0 -s sample_1.fastq -r /path/to/genome/index

Output:
    For each 1M reads increment, a record is generated showing:
    - Total reads processed
    - Forward/Reverse strand counts
    - Strandedness determination (fr-firststrand, fr-secondstrand, fr-unstranded)
    
    This allows you to see how the determination stabilizes with increasing data.

IMPORTANT: Please input the R1 (first read) fastq file only.
           File names should contain patterns like: *_1.fastq, *_1.fq, *_1.fq.gz, *_R1.fastq, etc.
           DO NOT use R2 (second read) files: *_2.fastq, *_2.fq, *_2.fq.gz, *_R2.fastq, etc.

EOF
}

log_info() {
    local message="${1:-}"
    [[ -n "$message" ]] && echo -e "${GREEN}[INFO]${NC} $message" >&2
}

log_warn() {
    local message="${1:-}"
    [[ -n "$message" ]] && echo -e "${YELLOW}[WARN]${NC} $message" >&2
}

log_error() {
    local message="${1:-}"
    [[ -n "$message" ]] && echo -e "${RED}[ERROR]${NC} $message" >&2
}

check_r2_file() {
    local file="$1"
    local basename=$(basename "$file")
    
    # Check if file appears to be R2 (second read) based on common naming patterns
    if [[ "$basename" =~ _2\.(fq|fastq)(\.gz)?$ ]] || \
       [[ "$basename" =~ _R2\.(fq|fastq)(\.gz)?$ ]] || \
       [[ "$basename" =~ \.2\.(fq|fastq)(\.gz)?$ ]] || \
       [[ "$basename" =~ _r2\.(fq|fastq)(\.gz)?$ ]]; then
        log_warn "WARNING: Input file appears to be R2 (second read): $basename"
        log_warn "         resolveS requires R1 (first read) files for proper strand detection."
        log_warn "         Please use the corresponding R1 file instead (e.g., *_1.fastq, *_R1.fastq)."
    fi
    return 0
}

check_dependencies() {
    local missing=0

    if [[ ! -f "${REFERENCE_DB}.1.bt2" ]]; then
        log_error "Can not found the bowtie2 genome index file: ${REFERENCE_DB}.1.bt2"
        log_error "Please check your -r parameter or download the default index from https://github.com/yudalang3/resolveS"
        missing=1
    fi
    
    if [[ ! -f "${SCRIPT_DIR}/align_by_bowtie2.sh" ]]; then
        log_error "Required script not found: ${SCRIPT_DIR}/align_by_bowtie2.sh"
        missing=1
    fi
 
    if [[ ! -f "${SCRIPT_DIR}/count_sam_1M_increase.sh" ]]; then
        log_error "Required script not found: ${SCRIPT_DIR}/count_sam_1M_increase.sh"
        missing=1
    fi
    
    if [[ ! -f "${SCRIPT_DIR}/check_strand_step1M_withCount.py" ]]; then
        log_error "Required script not found: ${SCRIPT_DIR}/check_strand_step1M_withCount.py"
        missing=1
    fi
    
    if [[ $missing -eq 1 ]]; then
        exit 1
    fi
}

process_single_file() {
    local input="$1"
    local output="$2"
    local threads="$3"
    local max_alig_reads="$4"
    local max_millions="$5"
    
    if [[ ! -f "$input" ]]; then
        log_error "Input file not found: $input"
        return 1
    fi
    
    # Check if file appears to be R2
    check_r2_file "$input"
    
    log_info "Processing: $input (threads: $threads, max_reads: ${max_millions}M, reference: $REFERENCE_DB)"

    # Step 1: Run alignment with specified number of reads
    log_info "Step 1: Aligning reads with bowtie2..."
    "${SCRIPT_DIR}/align_by_bowtie2.sh" "$input" "$REFERENCE_DB" "$threads" "$max_alig_reads"
    
    # Get basename for logging
    local fullpath=$(realpath "$input")
    local base_name=$(basename "$fullpath")
    
    # Step 2: Count SAM file with 1M increments
    log_info "Step 2: Counting SAM file in 1M increments..."
    "${SCRIPT_DIR}/count_sam_1M_increase.sh" resolveS.sam "$output" "$fullpath" "$max_millions"
    
    return 0
}

#===============================================================================
# Main
#===============================================================================

# Parse command line arguments
while getopts "s:c:p:r:u:h" opt; do
    case $opt in
        s)
            INPUT_FILE="$OPTARG"
            ;;
        c)
            OUTPUT_FILE="$OPTARG"
            ;;
        p)
            THREADS="$OPTARG"
            # Validate thread number
            if ! [[ "$THREADS" =~ ^[0-9]+$ ]] || [[ "$THREADS" -lt 1 ]]; then
                log_error "Invalid thread number: $THREADS (must be a positive integer)"
                exit 1
            fi
            ;;
        r)
            REFERENCE_DB="$OPTARG"
            REFERENCE_DB_IS_DEFAULT=false  # Mark as user-provided
            ;;
        u)
            MAX_MILLIONS="$OPTARG"
            # Validate max millions number
            if ! [[ "$MAX_MILLIONS" =~ ^[0-9]+$ ]] || [[ "$MAX_MILLIONS" -lt 1 ]]; then
                log_error "Invalid value for -u: $MAX_MILLIONS (must be a positive integer)"
                exit 1
            fi
            MAX_ALIG_READS=$((MAX_MILLIONS * 1000000))
            ;;
        h)
            print_usage
            exit 0
            ;;
        \?)
            log_error "Invalid option: -$OPTARG"
            print_usage
            exit 1
            ;;
    esac
done

shift $((OPTIND-1))

# Normalize REFERENCE_DB to absolute path
if [[ "$REFERENCE_DB" != /* ]]; then
    # Relative path - convert to absolute path
    if [[ "$REFERENCE_DB_IS_DEFAULT" == true ]]; then
        # Default value is relative to script directory
        REFERENCE_DB="${SCRIPT_DIR}/${REFERENCE_DB}"
    else
        # User input is relative to current working directory
        if [[ -d "$(dirname "$REFERENCE_DB")" ]]; then
            REFERENCE_DB="$(cd "$(dirname "$REFERENCE_DB")" && pwd)/$(basename "$REFERENCE_DB")"
        else
            # Directory doesn't exist yet, construct absolute path manually
            REFERENCE_DB="$(pwd)/$REFERENCE_DB"
        fi
    fi
fi

# Check if input file is specified
if [[ -z "$INPUT_FILE" ]]; then
    log_error "Please specify input file with -s option"
    print_usage
    exit 1
fi

# Check dependencies
check_dependencies

# Process the file
process_single_file "$INPUT_FILE" "$OUTPUT_FILE" "$THREADS" "$MAX_ALIG_READS" "$MAX_MILLIONS"

# Step 3: Run incremental strand analysis
log_info "Step 3: Analyzing strandedness for each 1M increment..."
python3 ${SCRIPT_DIR}/check_strand_step1M_withCount.py $OUTPUT_FILE

# Clean up
if [[ -f resolveS.sam ]]; then
    rm resolveS.sam
    log_info "Cleaned up temporary file: resolveS.sam"
fi

if [[ -f $OUTPUT_FILE ]]; then
    rm $OUTPUT_FILE
    log_info "Cleaned up temporary file: $OUTPUT_FILE"
fi
log_info "All done!"

exit 0
